/* pages/item_info/item_info.wxss */
.item_info{
  width: 100%;
  height: 100%;
  background-color: #EDEDED;
  display:flex; 
  flex-direction:column;
}

.top{
  width: 100%; 
  background-color: white;
  display: flex;
  flex-direction: column;
}

.bottom{
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}

.title{
  margin-top: 30rpx;
  text-align: center; 
  font-size: 20px;
  font-weight: bold;
}

.author{
  width: 100%;
  height: 80rpx;
  padding: 20rpx;
  margin-top: 25rpx;
  border-top: 1rpx solid #777777; 
  display:flex; 
  flex-direction:row;
}

.img{
  width: 80rpx;
  height: 100%;
}

.author_info{
  width: 550rpx;
  height: 100%;
  margin-left: 30rpx;
  display:flex; 
  flex-direction:column;
}

.publisher{
  font-size: 14px;
}

.introduction{
  font-size: 12px;
  color: gray;
  margin-top: 5rpx;
}

.subtitle{
  font-size: 16px;
  font-weight: bold;
  margin: 20rpx 20rpx;
}

.cell{
  width: 90%;
  height: 100rpx;
  border-top: 1rpx solid #777777; 
  font-size: 16px;
  margin-left: 30rpx;
}

.description{
  margin: 0rpx 20rpx;
  font-size: 14px;
}

.black{
  width: 100%;
  height: 140rpx;
}

.button{
  width: 90%;
  position: fixed;
  bottom: 20rpx;
}