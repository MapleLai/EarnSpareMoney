<!--pages/item_info/item_info.wxml-->
<view class='item_info'>
  <view class='top'>
    <text class='title'>{{title}}</text>
    <view class='author' bindtap='getAuthorInfo'>
      <image class='img' src='{{img_url}}'></image>
      <view class='author_info'>
        <text class='publisher'>{{nickname}}</text>
        <text class='introduction'>{{introduction}}</text>
      </view>
    </view>
  </view>

  <view class='bottom'>
    <text class='subtitle'>任务详情</text>
    <text class='details'>{{description}}</text>
    <view class='black'></view>
    <button class='button' type="primary" bindtap='participate'>我要参加</button>

  </view>
</view>
