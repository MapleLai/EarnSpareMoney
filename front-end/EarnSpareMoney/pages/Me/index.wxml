<!--index.wxml-->
<view class="weui-cells weui-cells_after-title">
  <navigator url="/pages/self_info/self_info">
    <view class="weui-cell">
      <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
        <image src= "{{img_url}}"  style="width: 50px; height: 50px; display: block"/>
      </view>
      <view class="weui-cell__bd">
        <view>{{name}}</view>
        <view style="font-size: 13px;color: #888888;">{{signature}}</view>
      </view>
    </view>
  </navigator>
</view>

<view class="weui-cells__title">钱包</view>
<view class="weui-cells weui-cells_after-title">
  <navigator url="/pages/balance/balance" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
      <image src="/pages/image/wallet.png" style="margin-right: 5px;vertical-align: middle;width:25px; height: 25px;"></image>
    </view>
    <view class="weui-cell__bd" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px; font-style='Arial';font-size:15px"></view>
    <view class="weui-cell__ft weui-cell__ft_in-access" style=" font-style='Arial';font-size:15px">余额</view>
  </navigator>
</view>