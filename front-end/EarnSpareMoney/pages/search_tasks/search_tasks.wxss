/* pages/search_tasks/search_tasks.wxss */
.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 80rpx;
}  

.swiper-tab-list{ 
  font-size: 30rpx;  
  display: inline-block;  
  width: 25%;  
  color: #777777;  
}  

.on{ 
  color: green;  
  border-bottom: 5rpx solid green;
}  
  
.swiper-box{ 
  display: block; height: 100%; 
  width: 100%; 
  overflow: hidden; 
}  


.all_tasks_list, .question_list, .activity_list, .errand_list{
  width: 100%;
  height: 100%;
  background-color: #EDEDED;
  display:flex; 
  flex-direction:column;
}

.item{
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.img{
  width: 120rpx;
  height: 100%;
}

.info{
  width: 550rpx;
  height: 100%;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.title{
  font-size: 16px;
}

.description{
  font-size: 13px;
  color: gray;
  margin-top: 5rpx;
}